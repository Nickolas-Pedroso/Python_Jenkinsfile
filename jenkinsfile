pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Nickolas-Pedroso/Python_Jenkinsfile.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker-compose build app'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // roda o container sÃ³ para executar testes
                    sh 'docker run --rm projeto_app pytest test_app.py || true'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'docker-compose up -d app'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado!'
        }
        failure {
            echo 'Falhou ðŸ˜¢'
        }
        success {
            echo 'Deploy concluÃ­do com sucesso ðŸš€'
        }
    }
}
