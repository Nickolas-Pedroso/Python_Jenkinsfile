pipeline {
    agent any

    environment {
        // Vari√°veis de ambiente para padroniza√ß√£o
        IMAGE_NAME = "projeto_app" // Nome da imagem Docker que ser√° constru√≠da
        CONTAINER_NAME = "projeto-app-runner" // Nome do container de deploy
        APP_PORT = "8080" // Porta da sua aplica√ß√£o
    }

    stages {
        stage('Setup') {
            agent {
                // Usar uma imagem Linux padr√£o que tenha 'apt'
                docker { image 'debian:latest' }
            }
            steps {
                echo "‚öôÔ∏è Installing Docker client inside Jenkins agent..."
                // Este script instala o cliente Docker dentro do container tempor√°rio
                // para que o comando 'docker build' funcione
                sh '''
                    apt-get update && apt-get install -y docker.io
                    # O Docker j√° deve estar mapeado via socket, apenas garantimos a instala√ß√£o do client
                '''
            }
        }
        
        stage('Checkout') {
            steps {
                echo "‚¨áÔ∏è Checking out code from GitHub..."
                // Certifique-se de que 'github-token' √© o ID da credencial que funciona.
                git branch: 'master',
                    url: 'https://github.com/Nickolas-Pedroso/Python_Jenkinsfile.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            // Revertemos para 'agent any' para usar o workspace principal do Jenkins, onde o git clonou.
            agent any 
            steps {
                echo "üì¶ Building Docker image: ${IMAGE_NAME} usando app/Dockerfile"
                // Corre√ß√£o do caminho do Dockerfile (j√° feita por voc√™)
                sh "docker build -t ${IMAGE_NAME}:latest -f app/Dockerfile ." 
            }
        }

        stage('Run Tests') {
            agent any 
            steps {
                echo "üß™ Running tests inside container..."
                // Roda a imagem em modo tempor√°rio para executar os testes
                // Comando ajustado para rodar o arquivo de teste dentro da pasta 'app/'
                sh "docker run --rm ${IMAGE_NAME}:latest pytest app/teste.py || true"
            }
        }

        stage('Deploy') {
            agent any 
            steps {
                echo "üöÄ Starting new container deploy..."
                
                // 1. Para e remove containers antigos (se existirem)
                sh "docker rm -f ${CONTAINER_NAME} || true"
                
                // 2. Cria e sobe o novo container em background (-d)
                sh """
                docker run -d \
                  --name ${CONTAINER_NAME} \
                  -p ${APP_PORT}:${APP_PORT} \
                  --restart unless-stopped \
                  ${IMAGE_NAME}:latest
                """
                echo "‚úÖ Aplica√ß√£o iniciada em: http://localhost:${APP_PORT}"
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado!'
        }
        failure {
            echo 'Falhou üò¢. Verifique os logs detalhados acima.'
        }
        success {
            echo 'Deploy conclu√≠do com sucesso üöÄ'
        }
    }
}