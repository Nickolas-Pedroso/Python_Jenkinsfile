pipeline {
    agent any

    environment {
        // VariÃ¡veis de ambiente para padronizaÃ§Ã£o
        IMAGE_NAME = "projeto_app" // Nome da imagem Docker que serÃ¡ construÃ­da
        CONTAINER_NAME = "projeto-app-runner" // Nome do container de deploy
        APP_PORT = "8080" // Porta da sua aplicaÃ§Ã£o
    }

    stages {
        
        stage('Checkout') {
            steps {
                echo "â¬‡ï¸ Checking out code from GitHub..."
                // Certifique-se de que 'github-token' Ã© o ID da credencial que funciona.
                git branch: 'master',
                    url: 'https://github.com/Nickolas-Pedroso/Python_Jenkinsfile.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            // Usamos 'agent any' para executar o build no workspace principal
            agent any 
            steps {
                echo "ðŸ“¦ Building Docker image: ${IMAGE_NAME} usando app/Dockerfile"
                
                // Tenta instalar o cliente Docker (necessÃ¡rio se a imagem Jenkins for base)
                sh '''
                    # Verifica se o comando docker existe; se nÃ£o, tenta instalar.
                    if ! command -v docker >/dev/null 2>&1; then
                        echo "Docker client nÃ£o encontrado. Tentando instalar..."
                        apt-get update -y && apt-get install -y docker.io
                    fi
                    
                    # Comando de Build
                    docker build -t ${IMAGE_NAME}:latest -f app/Dockerfile .
                '''
            }
        }

        stage('Run Tests') {
            agent any 
            steps {
                echo "ðŸ§ª Running tests inside container..."
                // Roda a imagem em modo temporÃ¡rio para executar os testes
                // O '|| true' garante que o pipeline nÃ£o falhe mesmo se os testes falharem (Comportamento de teste comum)
                sh "docker run --rm ${IMAGE_NAME}:latest pytest app/teste.py || true"
            }
        }

        stage('Deploy') {
            agent any 
            steps {
                echo "ðŸš€ Starting new container deploy..."
                
                // 1. Para e remove containers antigos (se existirem)
                sh "docker rm -f ${CONTAINER_NAME} || true"
                
                // 2. Cria e sobe o novo container em background (-d)
                sh """
                docker run -d \\
                  --name ${CONTAINER_NAME} \\
                  -p ${APP_PORT}:${APP_PORT} \\
                  --restart unless-stopped \\
                  ${IMAGE_NAME}:latest
                """
                echo "âœ… AplicaÃ§Ã£o iniciada em: http://localhost:${APP_PORT}"
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado!'
        }
        failure {
            echo 'Falhou ðŸ˜¢. Verifique os logs detalhados acima.'
        }
        success {
            echo 'Deploy concluÃ­do com sucesso ðŸš€'
        }
    }
}

